<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#58a5e4" >

    <ScrollView
        android:id="@+id/weather_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <include layout="@layout/item_title" />
            <include layout="@layout/item_now" />
            <include layout="@layout/item_weather_forecast" />
            <include layout="@layout/item_weather_hourly" />
            <include layout="@layout/item_air_now" />
            <include layout="@layout/item_life_style" />
        </LinearLayout>
    </ScrollView>
</FrameLayout>
